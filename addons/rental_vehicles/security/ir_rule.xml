<odoo>

    <record id="rental_vehicles.rule_vehicles_office_manager" model="ir.rule">
        <field name="name">Vehicles: office restriction</field>
        <field name="model_id" ref="model_rental_vehicles_vehicle"/>
        <field name="groups" eval="[(4, ref('rental_vehicles.rental_vehicles_manager'))]"/>
        <field name="domain_force">
            [('office_id', 'in', user.office_ids.ids)]
        </field>
    </record>

    <record id="rental_vehicles.rule_order_office_manager" model="ir.rule">
        <field name="name">Order: office restriction</field>
        <field name="model_id" ref="model_rental_vehicles_order"/>
        <field name="groups" eval="[(4, ref('rental_vehicles.rental_vehicles_manager'))]"/>
        <field name="domain_force">
            ['|', ('office_id', 'in', user.office_ids.ids), ('office_id','=',False)]
        </field>
    </record>

