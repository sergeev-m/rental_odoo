<odoo>
    
    <record id="rental_vehicles.order_status_list" model="ir.ui.view">
      <field name="name">rental_vehicles.order.status.list</field>
      <field name="model">rental_vehicles.order.status</field>
      <field name="arch" type="xml">
        <list string="Status" editable="top">
            <field name="sequence" widget="handle"/>
            <field name="name"/>
            <field name="code" placeholder="e.g 'draft', 'active', 'done', 'cancelled"/>
            <field name="decoration"/>
        </list>
      </field>
    </record>

    <record id="rental_vehicles.order_status_action" model="ir.actions.act_window">
        <field name="name">School Status</field>
        <field name="res_model">rental_vehicles.order.status</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="rental_vehicles.order_status_menu"
                action="rental_vehicles.order_status_action"
                name="Order Status"
                parent="menu_rental_vehicles_reference_root"
                sequence="70"
    />

    <record id="rental_vehicles.order_list" model="ir.ui.view">
        <field name="name">rental_vehicles.order.tree</field>
        <field name="model">rental_vehicles.order</field>
        <field name="arch" type="xml">
            <list 
                delete="0"
                decoration-danger="status_decoration == 'danger'"
                decoration-success="status_decoration == 'success'"
                decoration-warning="status_decoration == 'warning'"
                decoration-info="status_decoration == 'info'"
            >
                <field name="office_id" optional="hide"/>
                <field name="vehicle_id" class="o_col_3"/>
                <field name="start_date" optional="hide"/>
                <field name="end_date" optional="hide"/>
                <field name="progress_html" widget="html" width="90" string="Progress"/>
                <field name="rental_days" optional="hide"/>
                <field name="rental_hours" optional="hide"/>
                <field name="start_mileage" optional="hide"/>
                <field name="end_mileage" optional="hide"/>
                <field name="tariff_id" optional="hide"/>
                <field name="tariff_price" optional="hide"/>
                <field name="extra_expenses" optional="hide" sum="Total"/>
                <field name="amount_total" sum="amount total"/>
                <field name="currency_id" optional="hide"/>
                <field name="deposit_amount" optional="hide"/>
                <field name="status_id" optional="hide"/>
                <field name="status_code" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="rental_vehicles.order_form" model="ir.ui.view">
        <field name="name">rental_vehicles.order.form</field>
        <field name="model">rental_vehicles.order</field>
        <field name="arch" type="xml">
            <form string="Order" delete="0">
                <header>
                    <!-- Кнопка старта аренды -->
                    <button name="action_start_rental"
                            type="object"
                            string="Start Rental"
                            class="btn-primary"
                            invisible="status_code != 'draft'" />

                    <!-- Кнопка окончания аренды -->
                    <button name="action_end_rental"
                            type="object"
                            string="End Rental"
                            class="btn-danger"
                            invisible="status_code != 'active'" />

                    <button name="action_cancel"
                            type="object" string="Cancel"
                            invisible="status_code not in ['draft', 'active']"
                            class="btn-secondary"/>

                    <button name="action_open_photo_wizard"
                            string="Recognize Renter from Photo"
                            type="object"
                            icon="fa-camera"
                            class="oe_highlight"/>

                    <field name="status_id" widget="statusbar" options="{'clickable':1}"/>

                </header>
                <sheet>
                    <field name="currency_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="office_id"/>
                            <field name="vehicle_id"/>  
                        </group>
                        <group>
                            <field name="renter_id"/>
                        </group>
                        <separator/>
                        <group>
                            <field name="rental_days"/>
                            <field name="rental_hours"/>
                            <field name="tariff_id"/>
                            <field name="tariff_price"/>
                            <field name="extra_expenses"/>
                            <field name="deposit_amount"/>
                            <field name="amount_total"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="start_mileage"/>
                            <field name="end_mileage"/>
                        </group>
                    </group>
                    <separator string="Order lines"/>
                    <field name="order_line_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="type"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="price"/>
                            <field name="total" sum="Total"/>
                            <field name="tariff_id" optional="hide"/>
                            <field name="currency_id" optional="hide"/>
                            <field name="affects_salary" optional="hide"/>
                            <field name="sequence" optional="hide"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rental_vehicles.order_graph" model="ir.ui.view">
        <field name="name">rental_vehicles.order.graph</field>
        <field name="model">rental_vehicles.order</field>
        <field name="arch" type="xml">
            <graph string="Orders" type="bar" disable_linking="0" stacked="1">
                <field name="start_date"/>
                <field name="vehicle_id"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="rental_vehicles.order_search" model="ir.ui.view">
        <field name="name">Order</field>
        <field name="model">rental_vehicles.order</field>
        <field name="arch" type="xml">
            <search string="Orders">
                <filter name="status_active"
                        string="Active"
                        domain="[('status_code', '=', 'active')]"/>
                <filter name="status_not_cancelled"
                        string="Valid"
                        domain="[('status_code', 'in', ['active', 'done'])]"/>
                <filter string="Start Date" name="filter_srart_date" date="start_date" default_period="month"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

                <searchpanel>
                    <field name="status_id" string="Status" select="multi" icon="fa-filter" color="#875A7B"/>
                    <field name="office_id" string="Office" enable_counters="1" icon="fa-globe" color="red"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="rental_vehicles.order_window" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">rental_vehicles.order</field>
        <field name="view_mode">list,form,graph</field>
        <field name="context">{'search_default_status_not_cancelled': 1}</field>
    </record>
</odoo>
