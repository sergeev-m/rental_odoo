<odoo>

    <record id="view_vehicle_image_form" model="ir.ui.view">
        <field name="name">vehicle.image.form</field>
        <field name="model">rental_vehicles.vehicle.image</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="sequence"/>
                    <field name="image_1920" widget="image"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_vehicle_image_kanban" model="ir.ui.view">
        <field name="name">vehicle.image.kanban</field>
        <field name="model">rental_vehicles.vehicle.image</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="image_1920"/>
                <field name="sequence"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card">
                            <field name="image_1920" widget="image" class="o_kanban_image"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>