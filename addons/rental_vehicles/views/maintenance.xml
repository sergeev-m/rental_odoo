<odoo>
    <record id="rental_vehicles.maintenance_form" model="ir.ui.view">
      <field name="name">rental_vehicles.maintenance.form</field>
      <field name="model">rental_vehicles.maintenance</field>
      <field name="arch" type="xml">
        <form string="Maintenance">
          <sheet>
            
            <group>
              <field name="vehicle_id" readonly="1"/>
              <field name="date"/>
              <field name="mileage"/>
            </group>

            <group string="Types of services">
              <field name="maintenance_line_ids" nolabel="1">
                <list>
                  <field name="service_type_id"/>
                  <field name="cost" sum="Total"/>
                </list>
                <form>
                  <group>
                    <field name="service_type_id"/>
                    <field name="cost"/>
                  </group>
                </form>
              </field>
            </group>
            <group>
              <field name="note"/>
            </group>
          
          </sheet>
        </form>
      </field>
    </record>

    <record id="rental_vehicles.maintenance_list" model="ir.ui.view">
      <field name="name">rental_vehicles.maintenance.list</field>
      <field name="model">rental_vehicles.maintenance</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="vehicle_id"/>
          <field name="date"/>
          <field name="mileage"/>
          <field name="note"/>
          <field name="total_cost"/>
          <field name="currency_id"/>
        </list>
      </field>
    </record>

    <record id="rental_vehicles.maintenance_window" model="ir.actions.act_window">
        <field name="name">Maintenance</field>
        <field name="res_model">rental_vehicles.maintenance</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
