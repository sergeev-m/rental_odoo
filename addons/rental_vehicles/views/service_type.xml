<odoo>
    <record id="rental_vehicles.service_type_form" model="ir.ui.view">
        <field name="name">rental_vehicles.service.type.form</field>
        <field name="model">rental_vehicles.service.type</field>
        <field name="arch" type="xml">
            <form string="Service type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="default_cost"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rental_vehicles.service_type_list" model="ir.ui.view">
        <field name="name">rental_vehicles.service.type.tree</field>
        <field name="model">rental_vehicles.service.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="default_cost"/>
            </list>
        </field>
    </record>

    <record id="rental_vehicles.service_type_window" model="ir.actions.act_window">
        <field name="name">Service type</field>
        <field name="res_model">rental_vehicles.service.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
