<odoo>
    <record id="rental_vehicles.maintenance_plan_form" model="ir.ui.view">
        <field name="name">rental_vehicles.maintenance.plan.form</field>
        <field name="model">rental_vehicles.maintenance.plan</field>
        <field name="arch" type="xml">
            <form string="Maintenance plan">
                <sheet>
                    <group>
                        <group>
                            <field name="model_id"/>
                            <field name="interval_km"/>
                            <field name="remind_before_km"/>
                        </group>
                        <group>
                            <field name="service_type_id"/>
                            <field name="interval_days"/>
                            <field name="remind_before_days"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rental_vehicles.maintenance_plan_list" model="ir.ui.view">
        <field name="name">rental_vehicles.maintenance.plan.list</field>
        <field name="model">rental_vehicles.maintenance.plan</field>
        <field name="arch" type="xml">
            <list>
                <field name="model_id"/>
                <field name="interval_km"/>
                <field name="remind_before_km"/>
                <field name="service_type_id"/>
                <field name="interval_days"/>
                <field name="remind_before_days"/>
            </list>
        </field>
    </record>

    <record id="rental_vehicles.maintenance_plan_window" model="ir.actions.act_window">
        <field name="name">Maintenance Plans</field>
        <field name="res_model">rental_vehicles.maintenance.plan</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
