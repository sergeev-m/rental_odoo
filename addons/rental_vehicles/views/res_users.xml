<odoo>
    <record id="view_users_form_office" model="ir.ui.view">
        <field name="name">res.users.form.office</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='page_security']" position="after">
                <page string="Office" name="page_office">
                    <group>
                        <field name="office_id"/>
                        <field name="office_ids" widget="many2many_tags"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
