<odoo>
  <record id="rental_vehicles.vehicle_form" model="ir.ui.view">
    <field name="name">rental_vehicles.vehicle.form</field>
    <field name="model">rental_vehicles.vehicle</field>
    <field name="arch" type="xml">
      <form string="Vehicle">

        <header>
          <field name="status" widget="statusbar"/>
        </header>

        <sheet>
          <div class="oe_button_box" name="button_box">
              <button name="action_view_orders"
                      type="object"
                      class="oe_stat_button"
                      icon="fa-list">
                  <field string="Заказы" name="order_ids" widget="statinfo"/>
              </button>
          </div>
          
          <group>
            <group>
              <field name="office_id"/>
              <field name="model_id"/>
              <field name="plate_number"/>
              <field name="year"/>
              <field name="purchase_price"/>
              <field name="vehicle_type_id" invisible="1"/>
              <field name="mileage"/>
            </group>

            <group>
              <field name="maintenance_due_ids" nolabel="1">
                <list decoration-danger="overdue" decoration-warning="is_due and not overdue">
                  <field name="service_type_id"/>
                  <field name="next_service_mileage" optional="hide"/>
                  <field name="next_service_date" optional="hide"/>
                  <field name="km_to_due"/>
                  <field name="days_to_due"/>
                </list>
              </field>
            </group>
          </group>

          <notebook>
            <page string="Maintenance">
              <field name="maintenance_ids">
                <list>
                  <field name="name"/>
                  <field name="date"/>
                  <field name="mileage"/>
                  <field name="note"/>
                  <field name="total_cost"/>
                </list>
              </field>
            </page>
            <page string="Images">
                <field name="image_ids" mode="kanban"/>
            </page>
          </notebook>

        </sheet>
      </form>
    </field>
  </record>

  <record id="rental_vehicles.vehicle_list" model="ir.ui.view">
    <field name="name">rental_vehicles.vehicle.list</field>
    <field name="model">rental_vehicles.vehicle</field>
    <field name="arch" type="xml">
        <list>
          <field name="sequence" widget="handle"/>
          <field name="name"/>
          <field name="office_id" optional="hide"/>
          <field name="model_id" optional="hide"/>
          <field name="plate_number" optional="hide"/>
          <field name="year" optional="hide"/>
          <field name="purchase_price" optional="hide"/>
          <field name="vehicle_type_id" optional="hide"/>
          <field name="mileage"/>
          <field name="status" 
                 decoration-info="status == 'rented'"
                 decoration-danger="status == 'booked'"/>
        </list>
    </field>
  </record>

    <record id="view_vehicle_maintenance_kanban" model="ir.ui.view">
        <field name="name">vehicle.maintenance.kanban</field>
        <field name="model">rental_vehicles.vehicle</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" quick_create="false">
                <field name="name"/>
                <field name="maintenance_due_summary"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card o_kanban_card_hover">

                            <div class="o_kanban_card_header d-flex mb-2" style="justify-content: space-between;">
                                <strong t-esc="record.name.value"/>
                                <div>
                                    <field name="status"
                                           widget="label_selection"
                                           options="{'classes': {'available': 'success', 'rented': 'info', 'default': 'warning'}}" class="ms-auto"/>
                                </div>
                            </div>

                            <div class="o_kanban_card_body">
                                <t t-set="lines"
                                   t-value="JSON.parse(record.maintenance_due_summary.value || '[]')"
                                />

                                <t t-if="lines.length == 0">
                                    <div class="fs-5 text-muted">Нет предстоящих ТО</div>
                                </t>

                                <!-- Шапка таблицы -->
                                <div class="d-flex mb-1" style="font-weight:600; font-size:13px;">
                                    <div style="width: 55%;"></div>
                                    <div style="width: 22%; text-align:right;">next TS</div>
                                    <div style="width: 23%; text-align:right;">remaining</div>
                                </div>

                                <t t-foreach="lines" t-as="item">
                                    <div class="d-flex mb-1"
                                         style="line-height:14px;"
                                         t-att-class="item.overdue ? 'text-danger' : (item.is_due ? 'text-warning' : '')"
                                    >
                                        
                                        <!-- Название услуги -->
                                        <div class="fs-5" style="width: 55%;">
                                            <t t-esc="item.service"/>
                                        </div>

                                        <!-- Следующее ТО -->
                                        <div class="fs-5" style="width: 22%; text-align:right;">
                                                <t t-esc="item.next_service"/>
                                        </div>

                                        <!-- Остаток -->
                                        <div class="fs-5" style="width: 23%; text-align:right;">
                                                <t t-esc="item.remaining"/>
                                        </div>
                                   </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


  <record model="ir.actions.act_window" id="rental_vehicles.vehicle_window">
    <field name="name">Vehicle</field>
    <field name="res_model">rental_vehicles.vehicle</field>
    <field name="view_mode">list,form,kanban</field>
    <field name="mobile_view_mode">list</field>
  </record>

</odoo>
