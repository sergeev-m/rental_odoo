<odoo>

    <record id="rental_vehicles.payout_list" model="ir.ui.view">
        <field name="name">rental_vehicles.payout.list</field>
        <field name="model">rental_vehicles.payout</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="office_id" optional="hide"/>
                <field name="date_from" optional="hide"/>
                <field name="date_to" optional="hide"/>
                <field name="total_payout" sum="Total Salary"/>
            </list>
        </field>
    </record>

    <record id="rental_vehicles.payout_form" model="ir.ui.view">
        <field name="name">rental_vehicles.payout.form</field>
        <field name="model">rental_vehicles.payout</field>
        <field name="arch" type="xml">
            <form string="Payout">
                <header>
                    <button name="action_recalculate"
                            type="object"
                            string="Рассчитать"
                            class="btn-primary"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_orders"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-list">
                            <field string="Заказы" name="order_ids" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="currency_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="office_id" required="1" options="{'no_create': True}"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>

                        <group>
                            <field name="salary_percent"/>
                            <field name="salary_fixed_usd"/>
                            <field name="currency_rate_snapshot"/>
                            <field name="total_payout" readonly="1"/>
                        </group>
                    </group>
                    <field name="manager_payout_ids">
                        <list create="0" delete="0">
                            <field name="manager_id"/>
                            <field name="revenue" sum="Total"/>
                            <field name="revenue_base" sum="Total"/>
                            <field name="percent_part" readonly="1" sum="Total"/>
                            <field name="salary_fixed_converted" sum="Total"/>
                            <field name="total_payout" readonly="1" sum="Total"/>
                        </list>
                        <form>
                            <field name="currency_id" invisible="1"/>
                            <group>
                                <field name="manager_id" readonly="1"/>
                                <field name="revenue"/>
                                <field name="revenue_base" sum="Total"/>
                                <field name="percent_part"/>
                                <field name="salary_fixed_converted"/>
                                <field name="total_payout"/>
                            </group>
                            <group string="Orders">
                                <field name="order_ids" colspan="3" nolabel="1" readonly="1"/>
                            </group>
                        </form>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="rental_vehicles.payout_window" model="ir.actions.act_window">
        <field name="name">Расчёты по офисам</field>
        <field name="res_model">rental_vehicles.payout</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
