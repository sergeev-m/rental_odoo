<odoo>
  <record id="rental.vehicle_form" model="ir.ui.view">
    <field name="name">rental.vehicle.form</field>
    <field name="model">rental.vehicle</field>
    <field name="arch" type="xml">
      <form string="Vehicle">
        <sheet>
          <group>
            <field name="name"/>
            <field name="model_id"/>
            <field name="plate_number"/>
            <field name="serial_number"/>
            <field name="mileage"/>
            <field name="office_id"/>
            <field name="status"/>
          </group>
          <notebook>
            <page string="Maintenance Status">
              <field name="maintenance_status_ids">
                <list editable="bottom">
                  <field name="service_type"/>
                  <field name="last_service_mileage"/>
                  <field name="last_service_date"/>
                  <field name="next_service_mileage"/>
                  <field name="next_service_date"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>


  <record model="ir.actions.act_window" id="rental.vehicle_window">
    <field name="name">Vehicle</field>
    <field name="res_model">rental.vehicle</field>
    <field name="view_mode">list,form</field>
  </record>

</odoo>
