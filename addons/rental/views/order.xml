<odoo>
    <record id="rental.order_tree" model="ir.ui.view">
        <field name="name">rental.order.tree</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="office_id"/>
                <field name="vehicle_id"/>
                <field name="customer_name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="rental_days"/>
                <field name="start_mileage"/>
                <field name="end_mileage"/>
                <field name="tarif_id"/>
                <field name="total_amount"/>
                <field name="deposit_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="rental.order_form" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <form string="Заказ аренды">
                <header>
                    <!-- Кнопка старта аренды -->
                    <button name="action_start_rental"
                            type="object"
                            string="Start Rental"
                            class="btn-primary"
                            invisible="state != 'draft'" />

                    <!-- Кнопка окончания аренды -->
                    <button name="action_end_rental"
                            type="object"
                            string="End Rental"
                            class="btn-danger"
                            invisible="state != 'active'" />

                    <button name="action_cancel"
                            type="object" string="Cancel"
                            invisible="state not in ['draft', 'active']"
                            class="btn-secondary"/>
                    
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,active,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="office_id"/>
                        <field name="vehicle_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="rental_days"/>
                        <field name="customer_name"/>
                        <field name="start_mileage"/>
                        <field name="end_mileage"/>
                        <field name="tarif_id"/>
                        <field name="total_amount"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="deposit_amount"/>
                        <field name="extra_expenses"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rental.order_window" model="ir.actions.act_window">
        <field name="name">Заказы</field>
        <field name="res_model">rental.order</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
