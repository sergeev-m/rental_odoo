<odoo>
    <record id="rental.rental_tree" model="ir.ui.view">
        <field name="name">rental.rental.tree</field>
        <field name="model">rental.rental</field>
        <field name="arch" type="xml">
            <list>
                <field name="customer_name"/>
                <field name="vehicle_id"/>
                <field name="start_date"/>
                <field name="start_mileage"/>
                <field name="end_mileage"/>
                <field name="daily_rate"/>
                <field name="weekly_rate"/>
                <field name="total_amount"/>
                <field name="deposit_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="rental.rental_form" model="ir.ui.view">
        <field name="name">rental.rental.form</field>
        <field name="model">rental.rental</field>
        <field name="arch" type="xml">
            <form string="Заказ аренды">
                <header>
                    <!-- Кнопка старта аренды -->
                    <button name="action_start_rental"
                            type="object"
                            string="Start Rental"
                            class="btn-primary"
                            invisible="state != 'draft'" />

                    <!-- Кнопка окончания аренды -->
                    <button name="action_end_rental"
                            type="object"
                            string="End Rental"
                            class="btn-danger"
                            invisible="state != 'active'" />
                    
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,active,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="customer_name"/>
                        <field name="vehicle_id"/>
                        <field name="start_date"/>
                        <field name="start_mileage"/>
                        <field name="end_mileage"/>
                        <field name="daily_rate"/>
                        <field name="weekly_rate"/>
                        <field name="total_amount"/>
                        <field name="deposit_amount"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rental.rental_window" model="ir.actions.act_window">
        <field name="name">Заказы</field>
        <field name="res_model">rental.rental</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
